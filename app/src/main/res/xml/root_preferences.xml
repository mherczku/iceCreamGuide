<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/appearance">

        <ListPreference
            app:defaultValue="Magyar"
            app:entries="@array/lang_entries"
            app:entryValues="@array/lang_entries"
            app:key="language"
            app:title="@string/lang_title"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="darkTheme"
            app:title="@string/darkThemeTitle" />

    </PreferenceCategory>

</PreferenceScreen>
